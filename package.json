{
  "name": "minimal-node-ts-boilerplate",
  "version": "1.0.0",
  "description": "Minimal configuration for node ts including eslint and prettier",
  "main": "index.js",
  "dependencies": {
    "dotenv": "^8.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "24.9.1",
    "@types/node": "^13.5.0",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "chalk": "^4.1.0",
    "commitizen": "^4.2.1",
    "conventional-changelog": "^3.1.23",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "sinon": "^8.1.1",
    "ts-jest": "^25.0.0",
    "typescript": "^3.7.5",
    "typescript-eslint-parser": "^22.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node scripts/check-commit-message $HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch & node dist",
    "test": "jest",
    "start": "tsc && node dist/index.js",
    "commit": "cz",
    "generate:changelog": "node scripts/generate-changelog.js"
  },
  "gitHooks": {
    "commit-msg": "node scripts/check-commit-message.js"
  },
  "author": "Joshua Jimenez",
  "license": "ISC",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
